<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.gestionVehicules.GestionVehicules">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_4"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_marginVertical="25dp"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/car"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_veh_neuf_ajouter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_model_add"
                android:text="+ VEHICULE NEUF"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/button_veh_occas_ajouter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_model_add"
                android:text="+ VEHICULE OCCASION"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/button_veh_client_ajouter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="60dp"
                android:background="@drawable/button_model_add"
                android:text="+ VEHICULE CLIENT"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"/>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>